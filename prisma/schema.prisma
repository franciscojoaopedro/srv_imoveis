generator client {
  provider = "prisma-client-js"
}


datasource db {
 provider = "mongodb"
  url      =  env("DATABASE_URL")
}


model User{
  //id Int @id @default(autoincrement())
id     String @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  email String @unique
  password String
  Imobi Imobi[]
  @@map("users")
}

model Imobi{
  //id Int @id @default(autoincrement())
 id     String @id @default(auto()) @map("_id") @db.ObjectId
  tipo String?
  thumb String?
  endereco String?
  cidade String?
  uf String?
  valor String?
  descricao String?
  slug String
  created_at DateTime @default(now())
  userID  String @db.ObjectId
  author User @relation(fields: [userID],references: [id])
  @@map("imoveis")
}